@using ResumeProject.Models
@model List<TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İletişim Bilgileri Sayfası</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactID</td>
            <td>@item.NameSurname</td>
            <td>@item.TblCategory.CategoryName</td>@*Bu tblcategory tablosu ile ilişkili olduğunda o tablodaki veriyi şimdi çağırıyorum.*@
            <td>@item.Date</td>
            <td><a href="/Contact/DeleteContact/@item.ContactID"class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Contact/ViewTheMessage/@item.ContactID"class="btn btn-outline-secondary">Mesajı Aç</a></td>
        </tr>
    }
</table>
