@using ResumeProject.Models
@model TblProject
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Proje Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x=>x.ProjectID)@*id arka planda olsun ama ekranda gözükmesin!*@
    <label>Proje Başlığı</label>
    @Html.TextBoxFor(x=>x.ProjectTitle , new { @class="form-control"})
    <br />
    <label>Proje Açıklaması</label>
    @Html.TextBoxFor(x=>x.ProjectDescription , new{@class="form-control"})
    <br />
    <label>Proje Image Url</label>
    @Html.TextBoxFor(x=>x.ProjectImageUrl , new {@class="form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>

