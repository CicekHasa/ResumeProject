
@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Yetenek Ekleme Sayfası</h2>

<form method="post">
    <label>Yetenek Başlığı</label>
    <input type="text" class="form-control" name="SkillTitle"/>@*name kısmında db de oluşturulan sütun adı ne ise aynısı olması gerekli!!!*@
    <br />
    <label>Yetenek İkonu</label>
    <input type="text" class="form-control" name="SkillIcon"/>
    <br />
    <label>Yetenek Açıklaması</label>
    <input  type="text" class="form-control" name="SkillDescription"/>
    <br />
    <button class="btn btn-primary">Yeteneği Kaydet</button>
</form>
