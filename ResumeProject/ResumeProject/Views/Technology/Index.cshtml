@model List<ResumeProject.Models.TblTechnology> 
    @*Bunun dışında aşadaki kullanım da olabilir.*@
@*@using ResumeProject.Models
@model List<TblTechnology>*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Teknoloji Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Teknoloji Başlığı</th>
        <th>Teknoloji Değeri</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TechnologyID</td>
            <td>@item.TechnologyTitle</td>
            <td>@item.TechnologyValue</td>
            <td><a href="/Technology/DeleteTechnology/@item.TechnologyID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Technology/UpdateTechnology/@item.TechnologyID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Technology/AddTechnology" class="btn btn-primary">Yeni Teknoloji girişi</a>
