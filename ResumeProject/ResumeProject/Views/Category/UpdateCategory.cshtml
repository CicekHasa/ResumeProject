@model ResumeProject.Models.TblCategory 
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<form method="post">
    <label>Kategori ID</label>
    @Html.TextBoxFor(x=>x.CategoryID , new {@class="form-control", @readonly="readonly"})
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x=>x.CategoryName , new{@class="form-control"})
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>
